<% include ./partials/header.ejs %>

  <div id="main" class="w-full h-screen bg-[url(https://images.unsplash.com/photo-1524169358666-79f22534bc6e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] px-2 py-2 flex items-center justify-center">
    <div id="container" class="w-fit h-fit bg-zinc-100 px-20 py-8 border-4  rounded-md">
      <h1 class="text-center text-3xl leading-none capitalize font-semibold">Welcome to NoInterest.</h1>
      <% if(error.length > 0){ %>
        <p class="text-red-700 mt-4 text-center text-sm"><%= error %></p>
        <% } %>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="password" name="password" placeholder="Password">
        <a class="inline-block mt-2 text-zinc-700" href="#">Forgot Password?</a>
        <input class="border-2 block w-full px-3 py-2 mt-4 bg-orange-300 text-white rounded-full" type="submit" value="Login">
        <p class="text-xs text-zinc-500 mt-8 text-center">By continuing, you agree to NoInterest's Terms of Service
        </p>
      </form>
      <a class="inline-block mt-8 text-sm text-zinc-70 w-full text-center" href="/register">Don't Have An Account? Register</a>
    </div>
  </div>

<% include ./partials/footer.ejs %>