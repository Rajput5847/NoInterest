<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>

<div class="w-full min-h-screen px-10 py-5">
  <h1 style="border-bottom: 2px solid #F59E0B;" class="text-xl inline font-semibold py-2">Create a new post.</h1>
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="newpostform bg-[#FAEBD7] block w-1/2 px-3 py-2 border-2 rounded-md mt-20" type="file" name="postimage">
    <input class="newpostform bg-[#FAEBD7] block w-1/2 px-3 py-2 border-2 rounded-md mt-5" type="text" placeholder="Title" name="title">
    <textarea name="description" class="newpostform bg-[#FAEBD7] block w-1/2 px-3 py-2 h-40 border-2 rounded-md mt-5" placeholder="Description"></textarea>
    <input class="newpostform bg-[#FAEBD7] block w-1/2 px-3 py-2 border-2 rounded-md mt-5 bg-orange-300" type="submit" value="Create New Post">
  </form>
</div>

<style>
  @media (max-width: 700px) {
    .newpostform {
        width: 100%;
      }
  }
</style>

