<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>
<div class="w-full min-h-screen px-10 py-8">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){ %> 
      <a href="/feed/<%= elem._id %>">
        <div id="carad" class="w-32 card">
          <div id="tusinglehai" class="w-full h-40 bg-orange-300 rounded-md overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
          </div>
          <h5 class="mt-2 text-center font-semibold break-words"><%= elem.title %></h5>
          <h6 class="text-xs opacity-70  text-center">@<%= elem.user.username %></h6>
        </div>
      </a>
     <% }) %>
  </div>
</div>
<style>
  @media (max-width: 700px) {
    #carad {
      width: 100%;
    }
    #tusinglehai {
      height: fit-content;
    }
  }
</style>
<% include ./partials/footer.ejs %>