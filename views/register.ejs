<% include ./partials/header.ejs %>

<div id="main" class="w-full h-screen bg-[url(https://images.unsplash.com/photo-1513346940221-6f673d962e97?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] px-2 py-2 flex items-center justify-center">
  <div id="container" class="w-fit h-fit bg-zinc-100 px-20 py-8 border-4  rounded-md">
    <h1 class="text-center text-3xl leading-none capitalize font-semibold">Create New Account.</h1>
    <% if(userIfFail.length > 0){ %>
      <p class="text-red-700 mt-4 text-center text-sm"><%= userIfFail %></p>
      <% } %>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="text" name="fullname" placeholder="Full Name">
      <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="email" name="email" placeholder="E-Mail">
      <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="text" name="username" placeholder="Username">
      <input class="border-2 rounded-md block w-full px-3 py-2 mt-4" type="password" name="password" placeholder="Password">
      <input class="border-2 block w-full px-3 py-2 mt-8 bg-orange-300 text-white rounded-full" type="submit" value="Create New Account">
      <p class="text-xs text-zinc-500 mt-8 text-center">By continuing, you agree to NoInterest's Terms of Service
      </p>
    </form>
    <a class="inline-block mt-8 text-sm text-zinc-70 w-full text-center" href="/">Already Have An Account? Log In</a>
  </div>
</div>

<% include ./partials/footer.ejs %>